<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Ui.fragments.Rentals_fragemnt"
    android:orientation="vertical"
    android:background="#1b1b1b">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"

                        android:layout_marginRight="10dp"
                        android:src="@drawable/backgroundprof"
                        android:id="@+id/user_image"
                        android:layout_gravity="center_vertical"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="right">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_marginLeft="2dp"
                                android:layout_marginTop="10dp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ahmed Shehab"
                                android:textSize="10dp"
                                android:textColor="#000"
                                android:layout_marginBottom="5dp"
                                android:id="@+id/user_name"

                                />
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:id="@+id/verify"
                                android:src="@drawable/verfiy_logo"/>
                        </LinearLayout>

                        <TextView
                            android:layout_marginLeft="2dp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="shehabosama012421@gmail.com"
                            android:textSize="10dp"
                            android:textColor="#000"
                            android:layout_marginBottom="5dp"
                            android:id="@+id/user_email"
                            />
                        <TextView
                            android:layout_marginLeft="2dp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="01202991861"
                            android:textSize="10dp"
                            android:textColor="#000"
                            android:layout_marginBottom="5dp"
                            android:id="@+id/user_phone"
                            />
                        <TextView
                            android:layout_marginLeft="2dp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cairo"
                            android:textSize="10dp"
                            android:textColor="#000"
                            android:layout_marginBottom="5dp"
                            android:id="@+id/user_address"
                            />
                    </LinearLayout>


                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:progressBackgroundTint="@color/black"
                    android:indeterminateTint="@color/second_main_color"
                    android:progressTint="@color/second_main_color"
                    android:secondaryProgressTint="@color/second_main_color"
                    android:numStars="5"
                    android:id="@+id/rate_bar"


                    />
            </LinearLayout>





        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>