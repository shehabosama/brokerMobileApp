<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="#561563">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#fff"
        android:hint="room name"
        android:textColor="#fff"
        android:textColorHint="#969292"
        android:id="@+id/edt_room_name"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#fff"
        android:hint="room description"
        android:textColor="#fff"
        android:textColorHint="#969292"
        android:id="@+id/edt_room_desc"
        android:layout_marginTop="10dp"
        />
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_c"
            android:text="ADD"
            android:textStyle="bold"
            android:textColor="#561563"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/btn_add"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_exit"
            android:text="close"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_marginBottom="20dp"
            />
    </LinearLayout>
</FrameLayout>