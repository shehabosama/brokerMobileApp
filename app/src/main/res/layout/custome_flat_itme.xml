<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"

    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/imageview"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="shehab osama"
                android:textColor="@color/whiteTextColor"
                android:layout_marginHorizontal="5dp"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:textStyle="bold"
                android:id="@+id/username_flat_item"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="date: 11-10-1997"
                android:textColor="@color/whiteTextColor"
                android:layout_marginHorizontal="5dp"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:id="@+id/date_flat_item"/>
            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="from :location"
                android:textColor="@color/whiteTextColor"
                android:layout_marginHorizontal="5dp"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:id="@+id/location_flat_item"/>

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Price :10000"
                android:textColor="@color/whiteTextColor"
                android:layout_marginHorizontal="5dp"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:id="@+id/price_flat_item"
                />
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_star_border_whit"
            android:layout_gravity="center_vertical"
            android:id="@+id/fav_icon"/>
        <ImageView
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:layout_marginVertical="2dp"
            android:id="@+id/menu_flat_item"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hello djslkfjlksdjfglkjlksdf dsafds sdf sd fdogiodfjgkjdf kfdjglkfjdghdljfg dfjgjmfd.,mg klsdfjg kljdsfg"
            android:textColor="@color/whiteTextColor"
            android:layout_marginHorizontal="2dp"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            android:layout_marginVertical="5dp"
            android:id="@+id/description_flat_item"
            android:layout_weight="1"
            android:maxLines="2"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_expand_more_black_24dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:id="@+id/expand_icon"

            />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycler_image_item"
        />
</LinearLayout>



</LinearLayout>